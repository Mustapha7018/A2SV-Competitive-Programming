def favorite_problem():

    alphabet = 'abcdefghijklmnopqrstuvwxyz'
    hashmap = {}

    for i in range(len(alphabet)):
        hashmap[alphabet[i]] = i+1

    stringArr = [i for i in string]
    stringArr.sort()
    return hashmap[stringArr[-1]]
    


if __name__ == '__main__':
    t = int(input())

    for _ in range(t):
        n = int(input())
        string = input()

